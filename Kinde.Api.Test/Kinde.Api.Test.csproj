  <ItemGroup>
    <ProjectReference Include="..\Kinde.Api\Kinde.Api.csproj" />
  </ItemGroup>
  
  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>
